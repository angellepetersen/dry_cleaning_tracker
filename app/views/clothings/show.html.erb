<!-- Responsive panel example-->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Clothing #<%= @clothing.id %></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <dl class="dl-horizontal">
              <dt>Needs cleaning</dt>
              <dd><%= @clothing.needs_cleaning %></dd>

              <dt>Max no wears</dt>
              <dd><%= @clothing.max_no_wears %></dd>

              <dt>Actual wears</dt>
              <dd>#@wear.number</dd>

              <dt>Last Dry Clean Date</dt>
              <dd>#@dry_clean.updated_at </dd>

              <dt>Category</dt>
              <dd><%= @clothing.description %></dd>

            </dl>
            <div class="btn-group btn-group-justified">
              <a href="/clothings" class="btn btn-primary">
                <i class="fa fa-chevron-left"></i>
              </a>

              <a href="/clothings/<%= @clothing.id %>/edit" class="btn btn-warning">
                <i class="fa fa-edit"></i>
              </a>

              <a href="/delete_clothing/<%= @clothing.id %>" class="btn btn-danger" rel="nofollow">
                <i class="fa fa-trash-o"></i>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
