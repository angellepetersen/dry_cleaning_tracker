<!-- Validation failure messages -->

<% if @wear.errors.any? %>
  <% @wear.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Edit Wear #<%= @wear.id %></h3>
      </div>
      <div class="panel-body">
        <form action="/update_wear/<%= @wear.id %>" method="post" class="form-horizontal">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

          <!-- Label and input for clothing_id -->
          <div class="form-group">
            <label for="clothing_id" class="col-sm-2 control-label">
              Clothing ID
            </label>
            <div class="col-sm-10">
              <input type="text" id="clothing_id" name="clothing_id" placeholder="Clothing" class="form-control" value="<%= @wear.clothing_id %>">
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button class="btn btn-warning">
                Update Wear
              </button>
              or
              <a href="/wears/<%= @wear.id %>">Cancel</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>


<!-- End responsive panel example -->
